        ]
        ]; 

regex [errorSlim errorSlim] ; 
save stack errormodel_slim.hfst
clear stack

define errorCorbiere [errorUnion - nonConsFluidity
        ]; 

define nonConsFluidity              [y (->) [[%'::1]|[h::1]|[w::1]], 
                                     %' (->) [[w::1]|[y::1]|[h::1]],  !corbiere specific version that has apostrophes instead of h. test kinwaajbiiyan being mapped to corbiere-style kinwaajbii'an
                                     w (->) [[%'::1]|h::1|y::1] || [a|e|i|o] _ [a|e|i|o] ] ;  !this combines the y2h, glotGlide, hw rules into one, with a bit more specificity for hw

define errorCorbiere [errorCorbiere|nonConsFluidity] ; 
regex [errorCorbiere errorCorbiere] ; 
