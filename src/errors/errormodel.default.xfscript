define nasalEmergence               [h -> [[0]::2] || n _ .#.] ; 
define gnMetathesis                 [g n (->) [n g::2] || _ \[a|e|i|o]] ;
define indDeletion                  [d -> [[0]::1] || i n _ .#.] ;
define nDeletion                    [n -> [[0]::2] ||  [a|i|o|e] _ .#.] ;
define vvnTovvnh                    [[..] -> [h::2] || [i i|a a|o o|e] n _ .#.,,
                                     [..] -> [n h::3] || [ii|aa|oo|e] _ .#.] ; 

